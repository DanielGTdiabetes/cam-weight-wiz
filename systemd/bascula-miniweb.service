[Unit]
Description=Bascula Mini-Web Backend
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
Group=www-data
WorkingDirectory=/opt/bascula/current
EnvironmentFile=-/etc/default/bascula-audio
ExecStart=/opt/bascula/current/.venv/bin/uvicorn backend.miniweb:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=1
RuntimeDirectory=bascula
StateDirectory=bascula
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
